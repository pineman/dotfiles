" disable italics: sed -i '/<option name="FONT_TYPE".*/d' ~/.config/JetBrains/IntelliJIdea2021.1/jba_config/colors/*
set hlsearch
vnoremap // y/<C-R>"<CR>
nnoremap <esc><esc> :w<cr> :noh <cr>
nnoremap P "0p
nnoremap U J
nnoremap J <C-f>
nnoremap K <C-b>
nnoremap <S-r> <C-r>
" gd go to definition, gh go back
nnoremap gh <C-o>
nnoremap gl <C-i>
" prev tab, next tab, close tab: on idea settings
" TODO: map 'go to next/prev bookmark'
" * highlight matches, but don't actually move
map * *N
set clipboard=unnamedplus
set clipboard+=ideaput
set ideajoin
set visualbell
set noerrorbells
set scrolloff=3
