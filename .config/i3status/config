# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 5
	color_good = "#31AB00"
	color_degraded = "#C4A000"
	color_bad = "#FF2026"
	output_format = i3bar
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery 0"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 0"
order += "tztime date"
order += "tztime time"

load {
	format = "%1min"
}

memory {
	format = " %available"
	memory_used_method = "classical"
	threshold_degraded = "10%"
}

disk "/" {
	format = " %free"
}

volume master {
	device = "pulse"
	format = " %volume"
	format_muted = " muted (%volume)"
}

wireless _first_ {
	format_up = " %essid"
	format_down = ""
}

ethernet _first_ {
	format_up = " %speed"
	format_down = ""
}

cpu_usage {
	format = " %usage"
	max_threshold = 75
}

cpu_temperature 0 {
	format = " %degrees ºC"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input"
}

battery 0 {
	integer_battery_capacity = "true"
	hide_seconds = "true"
	format = "%status %percentage %remaining"
	status_chr = ""
	status_bat = ""
	status_unk = ""
	status_full = ""
	low_threshold = "15"
	threshold_type = "percentage"
	last_full_capacity = "true"
}

tztime date {
	format = " %a %d/%m/%y"
}

tztime time {
	format = " %H:%M"
}
