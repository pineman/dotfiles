exec playerctld
exec swayidle -w \
	timeout 300 'physlock -sm' \
	timeout 315 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep 'physlock -dsm' \
	before-sleep 'playerctl pause' \
	lock 'physlock -sm'
