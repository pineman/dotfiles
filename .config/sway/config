# Input
#bindsym XF86Eject exec wtype -P delete
#bindsym $mod+Left exec wtype -P home
#bindsym $mod+Right exec wtype -P end
input type:keyboard {
	xkb_layout us
	xkb_options caps:swapescape,compose:ralt
	repeat_delay 140
	repeat_rate 55
}
input type:touchpad {
	tap enabled
	natural_scroll enabled
}
input type:pointer {
	accel_profile flat
	pointer_accel 1
}
# Apperance
#output eDP-1 scale 1.22
default_border pixel 3
default_floating_border pixel 2
gaps inner 4
gaps outer 0
smart_gaps on
hide_edge_borders --i3 smart
font pango:Sans 10.5
titlebar_padding 4 3
titlebar_border_thickness 1
client.background #000000
# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
