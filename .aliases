}
cd() {
  builtin cd "$@" && ll
}
tobg() {
  ("$@" &) &>/dev/null
}
loop() {
  #TODO: doesn't accept aliases
  while :; do "$@"; sleep 2; done
}
alias open="tobg xdg-open"
u() {
