# ex - archive extractor
# usage: ex <file>
ex() {
	if [[ ! -f "$1" ]]; then
		echo "No such file or directoy: '$1'"
		return 2
	fi
	#mkdir $1
	case $1 in
		*.tar)		tar -xvf "$1" ;;
		*.tar.xz)	tar -xvJf "$1" ;;
		*.txz)		tar -xvJf "$1" ;;
		*.tar.pixz)	tar -Ipixz -xvf "$1" ;;
		*.tpxz)		tar -Ipixz -xvf "$1" ;;
		*.tar.bz2)	tar -xvjf "$1" ;;
		*.tbz2)		tar -xvjf "$1" ;;
		*.tar.gz)	tar -xvzf "$1" ;;
		*.tgz)		tar -xvzf "$1" ;;
		*.tar.zst)	tar -Izstdmt -xvf "$1" ;;
		*.tzst)		tar -Izstdmt -xvf "$1" ;;
		*.rar)		unrar -x "$1" ;;
		*.zip)		unzip "$1" ;;
		*.7z)		7z x "$1" ;;
		*.xz)		xz -d "$1" ;;
		*.pixz)		pixz -d "$1" ;;
		*.gz)		gunzip "$1" ;;
		*.bz2)		bunzip2 "$1" ;;
		*.Z)		uncompress -xf "$1" ;;
		*)			echo "'$1' cannot be extracted via ex" ;;
	esac
}

